{block content}
<div class="row-fluid">
	<div class="offset2 span8 search-main">
	    <img src="{$basePath}/img/logo.png" alt="Fitak.cz logo" title="Fitak.cz logo">
		<br>

	    {form searchForm}
		    <ul class="unstyled" n:if="$form->hasErrors()">
				<li n:foreach="$form->errors as $error" class="alert alert-error">{$error}</li>
		    </ul>
		    {input s, class => 'input-block-level'}
		    <br>
		    <button n:input="send" class="btn btn-large btn-primary"><i class="icon-search icon-white"></i> Vyhledat</button>
	    {/form}

	    <div class="cloud">
	    {if $trends}
	        <span n:foreach="$trends as $item" style="font-size:{!$item["size"]}em; margin-right: 15px;"><a n:href="Search:default 'tag:'.$item['name']">{$item["name"]}</a></span>
	    {else}
	        Žádné trendy v poslední době.
	    {/if}
	    </div>

	    {foreach $news as $message}
	    	<div class="news">
	    		{!$message->message}
	    	</div>
	    {/foreach}

	    <script type="text/javascript">
			$(document).ready(function() {
			    $('#options').click(function() {
				    $("#incComments").slideToggle();
			    });
			});
	    </script>
	</div>
</div>
{/block}
